<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Configuration de la base de données MySQL -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/services_publics?useSSL=false&amp;serverTimezone=UTC&amp;useUnicode=true&amp;characterEncoding=UTF-8&amp;allowPublicKeyRetrieval=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        
        <!-- Dialecte MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        
        <!-- Configuration du pool de connexions -->
        <property name="hibernate.connection.pool_size">10</property>
        <property name="hibernate.connection.autocommit">true</property>
        
        <!-- Affichage des requêtes SQL (utile pour le débogage) -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        
        <!-- Gestion du schéma de base de données -->
        <!-- update : met à jour le schéma si nécessaire -->
        <!-- validate : valide le schéma sans le modifier -->
        <!-- create : recrée le schéma à chaque démarrage (ATTENTION: supprime les données!) -->
        <!-- create-drop : recrée et supprime à la fermeture -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Encodage -->
        <property name="hibernate.connection.characterEncoding">UTF-8</property>
        <property name="hibernate.connection.useUnicode">true</property>
        
        <!-- Cache de second niveau (optionnel, désactivé par défaut) -->
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="hibernate.cache.use_query_cache">false</property>
        
        <!-- Mapping des entités -->
        <!-- Les entités seront mappées via annotations JPA -->
        <!-- Vous pouvez aussi utiliser des fichiers .hbm.xml ici -->
        
    </session-factory>
</hibernate-configuration>

